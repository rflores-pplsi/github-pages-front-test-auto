{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "target": "ESNext"
  },
  "exclude": ["node_modules", "dist"]
}
