{
  "root": true,
  "env": {
    "node": true,
    "amd": true,
    "mocha": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module",
    "warnOnUnsupportedTypeScriptVersion": false
  },
  "rules": {
    "semi": [
      "error",
      "always"
    ],
    "no-var": [
      "error"
    ],
    "eol-last": [
      "error",
      "always"
    ],
    "no-multiple-empty-lines": [
      1,
      {
        "max": 1
      }
    ],
    "no-unused-vars": "warn",
    "object-curly-spacing": [
      "error",
      "always"
    ],
    "no-duplicate-imports": [
      "warn"
    ]
  }
}